FROM python:3.9-slim

# Environment variables
ENV POETRY_VERSION=1.7.1
ENV POETRY_HOME="/opt/poetry"
ENV PATH="$POETRY_HOME/bin:$PATH"
ENV FLASK_APP=web.app
ENV PYTHONUNBUFFERED=1

# System dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential gcc g++ make libbz2-dev liblzma-dev zlib1g-dev \
    libcurl4-openssl-dev curl git && \
    rm -rf /var/lib/apt/lists/*

# Install Poetry
RUN curl -sSL https://install.python-poetry.org | python3 - --version $POETRY_VERSION

# Working directory
WORKDIR /app

# Copy dependency files
COPY pyproject.toml poetry.lock* /app/

# Install dependencies
RUN poetry install --no-root --no-dev

# Copy project files
COPY . /app

# Create directories for uploads and outputs
RUN mkdir -p /app/web/uploads /app/web/outputs && \
    chmod 777 /app/web/uploads /app/web/outputs

# Expose port
EXPOSE 5000

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=40s --retries=3 \
    CMD curl -f http://localhost:5000/health || exit 1

# Run the web application
CMD ["poetry", "run", "python", "-m", "flask", "run", "--host=0.0.0.0", "--port=5000"]
